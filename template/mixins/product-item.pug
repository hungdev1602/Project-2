mixin product-item(image, title, gender, age, price, className, link)
    div(class=`product-item ${className ? className : ""}`)
        div(class="product-item__img")
            a(href=link) 
                img(src=image, alt=title)
        div(class="product-item__content")
            h3(class="product-item__title")
                a(href=link) #{title}
            div(class="product-item__meta")
                div(class="product-item__meta-item")
                    span Giống: 
                    strong #{gender}
                div(class="product-item__dot")
                div(class="product-item__meta-item")
                    span Tuổi: 
                    strong #{age}
            div(class="product-item__price") #{price}